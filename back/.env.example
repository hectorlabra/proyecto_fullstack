# Configuración del servidor
PORT=3000

# Configuración de la base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=medical_appointments
DB_SSL=false

# Configuración de desarrollo
NODE_ENV=development

# Configuración de CORS - Lista de orígenes permitidos separados por comas
# En desarrollo: http://localhost:5173 (Vite por defecto)
# En producción: https://tu-dominio.onrender.com
ALLOWED_ORIGINS=http://localhost:5173

# Configuración de Rate Limiting
# Habilitar/deshabilitar limitación de tasa en endpoints públicos
# true: activo (recomendado en producción), false: desactivado
ENABLE_RATE_LIMIT=true
